<div class="space-y-6 fade-in">
	<div class="flex justify-between items-center">
		<div>
			<h2 class="text-3xl font-bold tracking-tight text-gray-900">Gestión de Pagos</h2>
			<p class="text-gray-600 mt-1">Administra mensualidades, inscripciones y otros pagos del club</p>
		</div>
		<button onclick="openPaymentModal()" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-all duration-200 flex items-center shadow-md hover:shadow-lg">
			<i data-lucide="plus" class="mr-2 h-5 w-5"></i>
			<span class="font-medium">Registrar Pago</span>
		</button>
	</div>

	<!-- Payment Summary -->
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
		<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
			<div class="flex items-center justify-between">
				<div>
					<p class="text-gray-600 text-sm font-medium">Ingresos del Mes</p>
					<p class="text-3xl font-bold text-gray-900">$2,450</p>
					<p class="text-green-600 text-sm font-medium">+15% vs mes anterior</p>
				</div>
				<div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
					<i data-lucide="trending-up" class="h-6 w-6 text-green-600"></i>
				</div>
			</div>
		</div>

		<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
			<div class="flex items-center justify-between">
				<div>
					<p class="text-gray-600 text-sm font-medium">Pagos Pendientes</p>
					<p class="text-3xl font-bold text-gray-900">$850</p>
					<p class="text-orange-600 text-sm font-medium">5 jugadores</p>
				</div>
				<div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
					<i data-lucide="clock" class="h-6 w-6 text-orange-600"></i>
				</div>
			</div>
		</div>

		<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
			<div class="flex items-center justify-between">
				<div>
					<p class="text-gray-600 text-sm font-medium">Pagos Vencidos</p>
					<p class="text-3xl font-bold text-gray-900">$320</p>
					<p class="text-red-600 text-sm font-medium">2 jugadores</p>
				</div>
				<div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
					<i data-lucide="alert-circle" class="h-6 w-6 text-red-600"></i>
				</div>
			</div>
		</div>

		<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 card-hover">
			<div class="flex items-center justify-between">
				<div>
					<p class="text-gray-600 text-sm font-medium">Total Anual</p>
					<p class="text-3xl font-bold text-gray-900">$28,500</p>
					<p class="text-blue-600 text-sm font-medium">Proyectado</p>
				</div>
				<div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
					<i data-lucide="dollar-sign" class="h-6 w-6 text-blue-600"></i>
				</div>
			</div>
		</div>
	</div>

	<!-- Payment Filters -->
	<div class="bg-white rounded-xl shadow-sm border border-gray-200">
		<div class="p-6 border-b border-gray-200">
			<h3 class="text-lg font-semibold text-gray-900">Filtrar Pagos</h3>
		</div>
		<div class="p-6">
			<div class="flex flex-col sm:flex-row gap-4">
				<div class="relative flex-1">
					<i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 h-5 w-5"></i>
					<input
						type="text"
						placeholder="Buscar por jugador o concepto..."
						class="pl-10 pr-4 py-3 border border-gray-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
					/>
				</div>
				<select class="px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 min-w-[150px]">
					<option>Todos los estados</option>
					<option>Pagado</option>
					<option>Pendiente</option>
					<option>Vencido</option>
				</select>
				<select class="px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 min-w-[150px]">
					<option>Todos los conceptos</option>
					<option>Mensualidad</option>
					<option>Inscripción</option>
					<option>Torneo</option>
					<option>Equipamiento</option>
				</select>
				<input type="month" class="px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" />
			</div>
		</div>
	</div>

	<!-- Payments Table -->
	<div class="bg-white rounded-xl shadow-sm border border-gray-200">
		<div class="p-6 border-b border-gray-200">
			<div class="flex justify-between items-center">
				<div>
					<h3 class="text-lg font-semibold text-gray-900">Historial de Pagos</h3>
					<p class="text-sm text-gray-600 mt-1">15 pagos encontrados</p>
				</div>
				<div class="flex space-x-2">
					<button class="px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors duration-200">
						<i data-lucide="download" class="h-4 w-4"></i>
					</button>
					<button class="px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors duration-200">
						<i data-lucide="filter" class="h-4 w-4"></i>
					</button>
				</div>
			</div>
		</div>
		<div class="overflow-x-auto">
			<table class="w-full">
				<thead class="bg-gray-50">
					<tr>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jugador</th>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Concepto</th>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Vencimiento</th>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Pago</th>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
						<th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
					</tr>
				</thead>
				<tbody class="bg-white divide-y divide-gray-200">
					<tr class="hover:bg-gray-50 transition-colors duration-200">
						<td class="px-6 py-4 whitespace-nowrap">
							<div class="flex items-center space-x-3">
								<div class="w-8 h-8 bg-gradient-to-r from-blue-600 to-blue-700 rounded-full flex items-center justify-center text-white text-sm font-bold">CR</div>
								<span class="font-medium text-gray-900">Carlos Rodríguez</span>
							</div>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="font-medium text-gray-900">Mensualidad Noviembre</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="text-lg font-bold text-gray-900">$150</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap text-gray-600">15/11/2024</td>
						<td class="px-6 py-4 whitespace-nowrap text-gray-600">12/11/2024</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="px-3 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Pagado</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<div class="flex space-x-2">
								<button class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200">
									<i data-lucide="eye" class="h-4 w-4"></i>
								</button>
								<button class="p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded-lg transition-all duration-200">
									<i data-lucide="download" class="h-4 w-4"></i>
								</button>
							</div>
						</td>
					</tr>
					<tr class="hover:bg-gray-50 transition-colors duration-200">
						<td class="px-6 py-4 whitespace-nowrap">
							<div class="flex items-center space-x-3">
								<div class="w-8 h-8 bg-gradient-to-r from-pink-600 to-pink-700 rounded-full flex items-center justify-center text-white text-sm font-bold">MG</div>
								<span class="font-medium text-gray-900">María González</span>
							</div>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="font-medium text-gray-900">Mensualidad Noviembre</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="text-lg font-bold text-gray-900">$150</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap text-gray-600">15/11/2024</td>
						<td class="px-6 py-4 whitespace-nowrap text-gray-400">-</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="px-3 py-1 text-xs font-medium bg-orange-100 text-orange-800 rounded-full">Pendiente</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<div class="flex space-x-2">
								<button class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200">
									<i data-lucide="credit-card" class="h-4 w-4"></i>
								</button>
								<button class="p-2 text-gray-400 hover:text-orange-600 hover:bg-orange-50 rounded-lg transition-all duration-200">
									<i data-lucide="mail" class="h-4 w-4"></i>
								</button>
							</div>
						</td>
					</tr>
					<tr class="hover:bg-gray-50 transition-colors duration-200">
						<td class="px-6 py-4 whitespace-nowrap">
							<div class="flex items-center space-x-3">
								<div class="w-8 h-8 bg-gradient-to-r from-green-600 to-green-700 rounded-full flex items-center justify-center text-white text-sm font-bold">JP</div>
								<span class="font-medium text-gray-900">Juan Pérez</span>
							</div>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="font-medium text-gray-900">Mensualidad Octubre</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="text-lg font-bold text-gray-900">$120</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap text-gray-600">15/10/2024</td>
						<td class="px-6 py-4 whitespace-nowrap text-gray-400">-</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<span class="px-3 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">Vencido</span>
						</td>
						<td class="px-6 py-4 whitespace-nowrap">
							<div class="flex space-x-2">
								<button class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200">
									<i data-lucide="credit-card" class="h-4 w-4"></i>
								</button>
								<button class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200">
									<i data-lucide="alert-triangle" class="h-4 w-4"></i>
								</button>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
			<div class="flex items-center justify-between">
				<div class="text-sm text-gray-600">Mostrando 1-3 de 15 pagos</div>
				<div class="flex space-x-2">
					<button class="px-3 py-2 text-gray-400 hover:text-gray-600 hover:bg-white rounded-lg transition-all duration-200">
						<i data-lucide="chevron-left" class="h-4 w-4"></i>
					</button>
					<button class="px-3 py-2 bg-blue-600 text-white rounded-lg">1</button>
					<button class="px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-white rounded-lg transition-all duration-200">2</button>
					<button class="px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-white rounded-lg transition-all duration-200">3</button>
					<button class="px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-white rounded-lg transition-all duration-200">
						<i data-lucide="chevron-right" class="h-4 w-4"></i>
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
