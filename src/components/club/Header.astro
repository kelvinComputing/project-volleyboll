<header class="bg-white border-b border-gray-200 px-4 sm:px-6 py-4">
  <div class="flex items-center justify-between">
    <!-- Menú hamburguesa -->
    <div class="flex items-center space-x-4">
      <button onclick="toggleSidebar()" class="lg:hidden p-2 text-gray-600 hover:text-gray-900">
        <i data-lucide="menu" class="h-6 w-6"></i>
      </button>

      <!-- Título -->
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900">VolleyClub Pro</h1>
    </div>

    <!-- Controles -->
    <div class="flex items-center space-x-2 sm:space-x-4">
      <!-- Input de búsqueda: oculto en xs -->
      <div class="relative hidden sm:block">
        <i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 h-4 w-4"></i>
        <input
          type="text"
          placeholder="Buscar jugadores, eventos..."
          class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg w-48 sm:w-80 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        />
      </div>

      <!-- Notificación -->
      <button class="p-2 text-gray-400 hover:text-gray-600 transition-colors">
        <i data-lucide="bell" class="h-5 w-5"></i>
      </button>

      <!-- Usuario -->
      <div class="relative">
        <button onclick="toggleUserMenu()" class="flex items-center space-x-2 p-2 rounded-full hover:bg-gray-100 transition-colors">
          <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white text-sm font-medium">AD</div>
        </button>

        <!-- Menú de usuario -->
        <div id="userMenu" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
          <div class="p-4 border-b border-gray-200">
            <p class="text-sm font-medium">Admin</p>
            <p class="text-xs text-gray-500">admin@volleyclub.com</p>
          </div>
          <div class="py-2">
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Perfil</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Configuración</a>
            <hr class="my-2" />
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Cerrar sesión</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>


