<!-- Player Modal -->
<div id="playerModal" class="hidden fixed inset-0 bg-black bg-opacity-50 modal-backdrop z-50 flex items-center justify-center p-4">
	<div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
		<div class="p-6 border-b border-gray-200">
			<div class="flex justify-between items-center">
				<h3 class="text-xl font-semibold text-gray-900">Agregar Nuevo Jugador</h3>
				<button onclick="closePlayerModal()" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
					<i data-lucide="x" class="h-6 w-6"></i>
				</button>
			</div>
		</div>
		<div class="p-6">
			<form class="space-y-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Nombre Completo</label>
						<input
							type="text"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
							placeholder="Ej: Carlos Rodríguez"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Fecha de Nacimiento</label>
						<input
							type="date"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Posición</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Seleccionar posición</option>
							<option>Atacante</option>
							<option>Central</option>
							<option>Libero</option>
							<option>Armador</option>
							<option>Opuesto</option>
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Equipo</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Seleccionar equipo</option>
							<option>Senior</option>
							<option>Juvenil</option>
							<option>Femenino</option>
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Teléfono</label>
						<input
							type="tel"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
							placeholder="+1234567890"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
						<input
							type="email"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
							placeholder="jugador@email.com"
						/>
					</div>
				</div>
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-2">Dirección</label>
					<textarea
						rows="3"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						placeholder="Dirección completa"
					>
					</textarea>
				</div>
				<div class="flex justify-end space-x-4 pt-4">
					<button type="button" onclick="closePlayerModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200">Cancelar</button>
					<button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">Agregar Jugador</button>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Event Modal -->
<div id="eventModal" class="hidden fixed inset-0 bg-black bg-opacity-50 modal-backdrop z-50 flex items-center justify-center p-4">
	<div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
		<div class="p-6 border-b border-gray-200">
			<div class="flex justify-between items-center">
				<h3 class="text-xl font-semibold text-gray-900">Crear Nuevo Evento</h3>
				<button onclick="closeEventModal()" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
					<i data-lucide="x" class="h-6 w-6"></i>
				</button>
			</div>
		</div>
		<div class="p-6">
			<form class="space-y-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Título del Evento</label>
						<input
							type="text"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
							placeholder="Ej: Entrenamiento Técnico"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Tipo de Evento</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Seleccionar tipo</option>
							<option>Entrenamiento</option>
							<option>Partido</option>
							<option>Torneo</option>
							<option>Reunión</option>
							<option>Evento Social</option>
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Fecha</label>
						<input
							type="date"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Hora</label>
						<input
							type="time"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Duración (horas)</label>
						<input
							type="number"
							min="0.5"
							step="0.5"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
							placeholder="2"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Equipo</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Todos los equipos</option>
							<option>Senior</option>
							<option>Juvenil</option>
							<option>Femenino</option>
						</select>
					</div>
				</div>
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-2">Ubicación</label>
					<input
						type="text"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						placeholder="Cancha principal, Gimnasio, etc."
					/>
				</div>
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-2">Descripción</label>
					<textarea
						rows="3"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						placeholder="Detalles adicionales del evento"
					>
					</textarea>
				</div>
				<div class="flex justify-end space-x-4 pt-4">
					<button type="button" onclick="closeEventModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200">Cancelar</button>
					<button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">Crear Evento</button>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Payment Modal -->
<div id="paymentModal" class="hidden fixed inset-0 bg-black bg-opacity-50 modal-backdrop z-50 flex items-center justify-center p-4">
	<div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
		<div class="p-6 border-b border-gray-200">
			<div class="flex justify-between items-center">
				<h3 class="text-xl font-semibold text-gray-900">Registrar Pago</h3>
				<button onclick="closePaymentModal()" class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
					<i data-lucide="x" class="h-6 w-6"></i>
				</button>
			</div>
		</div>
		<div class="p-6">
			<form class="space-y-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Jugador</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Seleccionar jugador</option>
							<option>Carlos Rodríguez</option>
							<option>María González</option>
							<option>Juan Pérez</option>
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Concepto</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Seleccionar concepto</option>
							<option>Mensualidad</option>
							<option>Inscripción</option>
							<option>Torneo</option>
							<option>Equipamiento</option>
							<option>Otro</option>
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Monto</label>
						<div class="relative">
							<span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">$</span>
							<input
								type="number"
								min="0"
								step="0.01"
								class="w-full pl-8 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
								placeholder="0.00"
							/>
						</div>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Método de Pago</label>
						<select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200">
							<option>Seleccionar método</option>
							<option>Efectivo</option>
							<option>Transferencia</option>
							<option>Tarjeta de Crédito</option>
							<option>Tarjeta de Débito</option>
						</select>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Fecha de Pago</label>
						<input
							type="date"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						/>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700 mb-2">Fecha de Vencimiento</label>
						<input
							type="date"
							class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						/>
					</div>
				</div>
				<div>
					<label class="block text-sm font-medium text-gray-700 mb-2">Notas</label>
					<textarea
						rows="3"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
						placeholder="Información adicional sobre el pago"
					>
					</textarea>
				</div>
				<div class="flex justify-end space-x-4 pt-4">
					<button type="button" onclick="closePaymentModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200">Cancelar</button>
					<button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200">Registrar Pago</button>
				</div>
			</form>
		</div>
	</div>
</div>
