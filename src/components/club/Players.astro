<div class="space-y-6">
	<div class="flex justify-between items-center">
		<div>
			<h2 class="text-3xl font-bold tracking-tight">Gestión de Jugadores</h2>
			<p class="text-gray-600">Administra la información de todos los jugadores del club</p>
		</div>
		<button onclick="openPlayerModal()" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center">
			<i data-lucide="plus" class="mr-2 h-4 w-4"></i>
			Nuevo Jugador
		</button>
	</div>

	<!-- Search and Filters -->
	<div class="bg-white rounded-lg shadow-sm border border-gray-200">
		<div class="p-6 border-b border-gray-200">
			<h3 class="text-lg font-semibold">Buscar Jugadores</h3>
		</div>
		<div class="p-6">
			<div class="flex space-x-4">
				<div class="relative flex-1">
					<i data-lucide="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 h-4 w-4"></i>
					<input
						type="text"
						placeholder="Buscar por nombre, posición o equipo..."
						class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
					/>
				</div>
				<select class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
					<option>Filtrar por equipo</option>
					<option>Todos los equipos</option>
					<option>Senior</option>
					<option>Juvenil</option>
					<option>Femenino</option>
				</select>
			</div>
		</div>
	</div>

	<!-- Players Table -->
