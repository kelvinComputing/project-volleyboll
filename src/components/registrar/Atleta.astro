<!-- Fondo gradiente y centrado del contenido -->
<section class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center p-4">
	<div class="w-full max-w-2xl">
		<!-- Encabezado -->
		<div class="text-center mb-8">
			<a href="/" class="inline-flex items-center space-x-2 mb-4">
				<!-- Icono trofeo -->
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="lucide lucide-trophy h-8 w-8 text-blue-600"
				>
					<path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
					<path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
					<path d="M4 22h16"></path><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
					<path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
					<path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
				</svg>
				<span class="text-2xl font-bold text-gray-900">SportConnect</span>
			</a>

			<h1 class="text-2xl font-bold text-gray-900">Registro de Atleta</h1>
			<p class="text-gray-600 mt-2">Crea tu perfil deportivo gratuito</p>
		</div>

		<!-- Tarjeta / formulario -->
		<div class="rounded-lg border border-gray-200 bg-white text-gray-900 shadow-sm">
			<!-- Encabezado de sección -->
			<div class="flex flex-col space-y-1.5 p-6">
				<div class="flex items-center space-x-2 text-2xl font-semibold leading-none tracking-tight">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="lucide lucide-users h-5 w-5 text-blue-600"
					>
						<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
						<circle cx="9" cy="7" r="4"></circle>
						<path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
						<path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
					</svg>
					<span>Información Personal</span>
				</div>
				<div class="text-sm text-gray-500">Completa tu perfil para que los clubes puedan encontrarte</div>
			</div>

			<!-- Formulario -->
			<div class="p-6 pt-0">
				<form class="space-y-6">
					<!-- Nombre y apellido -->
					<div class="grid md:grid-cols-2 gap-4">
						<div class="space-y-2">
							<label for="firstName" class="text-sm font-medium">Nombre</label>
							<input
								id="firstName"
								name="firstName"
								type="text"
								placeholder="Tu nombre"
								required
								class="flex h-10 w-full rounded-md border border-gray-200 mt-2 px-3 py-2 text-sm
                            placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
							/>
						</div>

						<div class="space-y-2">
							<label for="lastName" class="text-sm font-medium">Apellido</label>
							<input
								id="lastName"
								name="lastName"
								type="text"
								placeholder="Tu apellido"
								required
								class="flex h-10 w-full rounded-md border border-gray-200 mt-2 px-3 py-2 text-sm
                            placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
							/>
						</div>
					</div>

					<!-- Email -->
					<div class="space-y-2">
						<label for="email" class="text-sm font-medium">Email</label>
						<input
							id="email"
							name="email"
							type="email"
							placeholder="tu@email.com"
							required
							class="flex h-10 w-full rounded-md border border-gray-200 mt-2 px-3 py-2 text-sm
                          placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
						/>
					</div>

					<!-- Contraseña -->
					<div class="space-y-2">
						<label for="password" class="text-sm font-medium">Contraseña</label>
						<input
							id="password"
							name="password"
							type="password"
							placeholder="••••••••"
							required
							class="flex h-10 w-full rounded-md border border-gray-200 mt-2 px-3 py-2 text-sm
                          placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
						/>
					</div>

					<!-- Deporte y posición -->
					<div class="grid md:grid-cols-2 gap-4">
						<div class="relative space-y-2">
							<label for="sport" class="text-sm font-medium">Deporte</label>
							<select
								id="sport"
								name="sport"
								required
								class="block appearance-none h-10 w-full rounded-md border border-gray-200 mt-2 px-3 pr-8 py-2 text-sm
             focus:outline-none focus:ring-2 focus:ring-blue-500"
							>
								<option value="" disabled selected hidden>Selecciona tu deporte</option>
								<option value="football">Fútbol</option>
								<option value="basketball">Baloncesto</option>
								<option value="tennis">Tenis</option>
								<option value="volleyball">Voleibol</option>
								<option value="swimming">Natación</option>
								<option value="athletics">Atletismo</option>
							</select>
							<div class="pointer-events-none absolute inset-y-0 right-0 top-6 flex items-center pr-3">
								<svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M6 9l6 6 6-6"></path>
								</svg>
							</div>
						</div>

						<div class="space-y-2">
							<label for="position" class="text-sm font-medium">Posición</label>
							<input
								id="position"
								name="position"
								type="text"
								placeholder="Ej: Delantero, Base, etc."
								class="flex h-10 w-full rounded-md border border-gray-200 mt-2 px-3 py-2 text-sm
             placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
							/>
						</div>
					</div>

					<!-- Nivel de experiencia -->
					<div class="relative space-y-2 mt-4">
						<label for="experience" class="text-sm font-medium">Nivel de Experiencia</label>
						<select
							id="experience"
							name="experience"
							required
							class="block appearance-none h-10 w-full rounded-md border border-gray-200 mt-2 px-3 pr-8 py-2 text-sm
                 focus:outline-none focus:ring-2 focus:ring-blue-500"
						>
							<option value="" disabled selected hidden>Selecciona tu nivel</option>
							<option value="beginner">Principiante</option>
							<option value="intermediate">Intermedio</option>
							<option value="advanced">Avanzado</option>
							<option value="professional">Profesional</option>
						</select>
						<div class="pointer-events-none absolute inset-y-0 right-0 top-8 flex items-center pr-3">
							<svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M6 9l6 6 6-6"></path>
							</svg>
						</div>
					</div>

					<!-- Biografía -->
					<div class="space-y-2">
						<label for="bio" class="text-sm font-medium">Biografía</label>
						<textarea
							id="bio"
							name="bio"
							rows="4"
							placeholder="Cuéntanos sobre ti, tus logros y objetivos deportivos..."
							class="flex w-full rounded-md border border-gray-200 mt-2 px-3 py-2 text-sm
                             placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
						>
						</textarea>
					</div>

					<!-- Botón enviar -->
					<button
						type="submit"
						class="inline-flex h-10 w-full items-center justify-center gap-2 rounded-md
                         bg-blue-600 px-4 py-2 text-sm font-medium text-white transition-colors
                         hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500
                         focus:ring-offset-2 cursor-pointer"
					>
						Crear Cuenta de Atleta
					</button>
				</form>

				<!-- Enlace a inicio de sesión -->
				<div class="mt-6 text-center">
					<p class="text-sm text-gray-600">
						¿Ya tienes cuenta?
						<a href="/login" class="text-blue-600 hover:underline">Inicia sesión aquí</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</section>
